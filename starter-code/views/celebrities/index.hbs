<h2>Celebrities List</h2>
<ul>
    {{#each celebrities}}
    <li><a href="celebrities/{{_id}}">{{name}}</a></li>
    <form action="celebrities/{{_id}}/edit" method="GET"><button type="submit">Update</button></form>
    <form action="celebrities/{{_id}}/delete" method="POST"><button type="submit">Delete</button></form>
    {{/each}}
</ul>
<p><a href="celebrities/new">Create a new celebrity</a></p>